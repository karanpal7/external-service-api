# =============================================================================
# FIREBLOCKS SERVICE ENVIRONMENT CONFIGURATION
# =============================================================================
# Copy this file to .env and update the values according to your setup

# =============================================================================
# APPLICATION SETTINGS
# =============================================================================
NODE_ENV=development
PORT=3000
SERVICE_NAME=fireblocks-service

# =============================================================================
# DATABASE CONFIGURATION (PostgreSQL)
# =============================================================================
# Main database for application data and logging
DB_HOST=localhost
DB_PORT=5432
DB_NAME=fireblocks_logs
DB_USERNAME=postgres
DB_PASSWORD=password

# Test database (used during testing)
DB_TEST_HOST=localhost
DB_TEST_PORT=5432
DB_TEST_NAME=fireblocks_test
DB_TEST_USERNAME=postgres
DB_TEST_PASSWORD=password

# =============================================================================
# REDIS CONFIGURATION
# =============================================================================
# Redis for caching and session storage
REDIS_HOST=localhost
REDIS_PORT=6379
REDIS_PASSWORD=
REDIS_DB=0

# =============================================================================
# FIREBLOCKS SDK CONFIGURATION
# =============================================================================
# Get these from your Fireblocks workspace
FIREBLOCKS_API_KEY=your_api_key_here
FIREBLOCKS_PRIVATE_KEY=your_private_key_here
FIREBLOCKS_BASE_URL=https://api.fireblocks.io
FIREBLOCKS_TIMEOUT=30000

# =============================================================================
# LOGGING CONFIGURATION
# =============================================================================
# Log levels: error, warn, info, debug
LOG_LEVEL=info

# Loki configuration for centralized logging
LOKI_HOST=http://localhost:3100
LOKI_ENABLED=true

# =============================================================================
# MONITORING CONFIGURATION
# =============================================================================
# Prometheus metrics
METRICS_ENABLED=true
METRICS_PORT=9090

# Health check configuration
HEALTH_CHECK_INTERVAL=30000

# =============================================================================
# SECURITY CONFIGURATION
# =============================================================================
# JWT configuration (if implementing authentication)
JWT_SECRET=your-super-secret-jwt-key
JWT_EXPIRE=24h

# API Rate limiting
RATE_LIMIT_WINDOW_MS=900000
RATE_LIMIT_MAX_REQUESTS=100

# =============================================================================
# EXTERNAL SERVICES
# =============================================================================
# Add any external service URLs or API keys here
# EXTERNAL_API_URL=https://api.example.com
# EXTERNAL_API_KEY=your_external_api_key

# =============================================================================
# DEVELOPMENT SETTINGS
# =============================================================================
# Set to true to enable development features
DEBUG_MODE=false
MOCK_FIREBLOCKS=true

# Hot reload settings
NODEMON_DELAY=1000
